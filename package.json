  "description": "The RotaCloud SDK for the RotaCloud API",
  "type": "module",
  "engines": {
    "node": ">=18.18.0"
  },
  "exports": "./dist/main.js",
  "files": [
    "src",
    "dist",
    "*.md"
  ],
  "scripts": {
